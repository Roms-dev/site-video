{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #41533B">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('homePage') }}">Disney -</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
    </nav>

    {# Partie LOGIN #}

    <section class="vh-100">
        <div class="container py-5 h-80">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="{{ asset('/asset/img_formulaire.jpg') }}"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    {{ form_start(form) }}

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Connexion</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connectez vous à
                                            votre compte Disney -</h5>

                                        <div class="form-outline mb-4">

                                            {{ form_widget(form._username, {'attr':{'class':'form-control form-control-lg'},}) }}

                                            <label class="form-label" for="form2Example17">Adresse E-mail</label>
                                        </div>

                                        <div class="form-outline mb-4">

                                            {{ form_widget(form._password, {'attr':{'class':'form-control form-control-lg'},}) }}


                                            <label class="form-label" for="form2Example27">Mot de passe</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            {{ form_widget(form._envoyer, {'attr':{'class':'btn btn-primary btn-lg btn-block'},}) }}
                                        </div>

                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                        <a class="small text-muted" href="#!">Mot de pass oublié?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Vous n'avez pas de compte Disney -? <a
                                                    href="{{ path('createUserPage') }}"
                                                    style="color: #393f81;">Inscription</a></p>
                                    {{ form_end(form) }}
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}


